@page
@model IndexModel
@{
	ViewData["Title"] = "Home page";
}

<div class="landing-container" data-change-when-quiz-active>
	<div class="title-button-container" data-change-when-quiz-active>
		<div class="title-container" data-change-when-quiz-active>
			<h1 class="title" data-change-when-quiz-active>Science or Fiction</h1>
		</div>
		<div data-change-when-quiz-active class="begin-quiz-button-container">
			<button class="button main-button" onclick="beginQuiz();" data-change-when-quiz-active>Begin Quiz</button>
		</div>
	</div>
</div>
<section class="quiz-container-wrapper">
	<div data-quiz-container class="quiz-container-container"></div>
	<div class="quiz-footer-container">
		<div class="quiz-footer" data-change-when-quiz-active>
			<div class="quiz-progress-container">
				<div class="quiz-progress">
					<div data-change-when-quiz-active data-quiz-percentage-progress="0" class="quiz-progress-marker-container">
						<div data-quiz-current-question-number  class="quiz-progress-marker">
						</div>
					</div>
					<div class="quiz-progress-line"></div>
				</div>
			</div>
		</div>
	</div>
</section>
<section class="quiz-results-container-container">
	<div class="quiz-results-container">
		<div class="quiz-results-header-container">
			<h3 class="quiz-results-header-text">Quiz Results</h3>
		</div>
		<div class="quiz-placing-container">
			<h5 data-quiz-place class="quiz-place">
				3rd Place
			</h5>
			<p data-quiz-percentage class="quiz-percentage">55%</p>
		</div>
		<div class="quiz-ranking-container">
			<ul class="quiz-ranking-list">
				<li class="quiz-ranking-list-item">
					<img class="rogue-ranking-image" src="test5.jpeg"/>
					<p class="quiz-rogue-name">test</p>
				</li>
			</ul>
		</div>
	</div>
</section>
<section class="templates hidden">
	<section data-quiz-template class="quiz-template">
		<div data-quiz-section-template class="quiz-container">
			<div data-quiz-section data-change-when-answered data-quiz-question-number class="quiz-section-container">
				<div class="quiz-inner-container">
					<h3 class="quiz-question-type-text">Multiple Choice Question</h3>
					<div data-quiz-question-container class="quiz-question-container">
						<h3 class="quiz-question" data-quiz-question></h3>
					</div>
					<ul data-quiz-answers class="quiz-answers-container">
						<li data-quiz-answer data-change-when-answered data-answer-number data-answer-correct class="quiz-answer">
							<ul data-quiz-rogue-answers class="rogue-answers-container">
								<li data-change-when-answered data-quiz-rogue-answer class="rogue-answer-image-container">
									<img data-quiz-rogue-image class="rogue-answer-image"/>
								</li>
							</ul>
							<p data-quiz-answer-text class="quiz-answer-text">
							
							</p>
						</li>
					</ul>
					<div data-quiz-question-number-text class="quiz-question-number"></div>
				</div>
			</div>
		</div>
		<div class="navigation-buttons-container">
			<button class="navigation-button previous-button" onclick="goToPreviousQuestion()">Previous</button>
			<button class="navigation-button next-button" onclick="goToNextQuestion()">Next</button>
		</div>
	</section>
</section>